<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1" android:versionName="1.0" package="ca.dal.cs.csci4126.quizboard">

    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="16"/>

    <application android:allowBackup="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:theme="@style/AppTheme">
        <activity android:label="@string/app_name" android:name="ca.dal.cs.csci4126.quizboard.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/app_name" android:name="ca.dal.cs.csci4126.quizboard.MainActivity">
            <intent-filter>
                <action android:name="ca.dal.cs.csci4126.quizboard.STARTINGPOINT"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/app_name" android:name="ca.dal.cs.csci4126.quizboard.Prefs">
            <intent-filter>
                <action android:name="ca.dal.cs.csci4126.quizboard.PREFS"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/app_name" android:name="ca.dal.cs.csci4126.quizboard.SubQuestionTypes">
            <intent-filter>
                <action android:name="ca.dal.cs.csci4126.quizboard.SUBQUEST"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/title_activity_login" android:name="ca.dal.cs.csci4126.quizboard.LoginActivity">
            <intent-filter>
                <action android:name="ca.dal.cs.csci4126.quizboard.LOGIN"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
           <!-- android:windowSoftInputMode="adjustResize|stateVisible" >-->
        </activity>
    </application>

</manifest>
