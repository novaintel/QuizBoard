<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1" android:versionName="1.0" package="ca.dal.cs.csci4126.quizboard">

    <uses-sdk android:minSdkVersion="11" android:targetSdkVersion="16"/>

    <application android:icon="@drawable/ic_launcher" android:label="@string/app_name">
        <activity android:label="Dasehboard" android:name="ca.dal.cs.csci4126.quizboard.DashboardActivity">
        </activity>

        <!-- Login Activity -->
        <activity android:label="@string/app_name" android:name="ca.dal.cs.csci4126.quizboard.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Register Activity -->
        <activity android:label="Register New Account" android:name="ca.dal.cs.csci4126.quizboard.RegisterActivity">
        </activity>
        <activity android:label="@string/app_name" android:name="ca.dal.cs.csci4126.quizboard.Prefs">
            <intent-filter>
                <action android:name="ca.dal.cs.csci4126.quizboard.PREFS"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/app_name" android:name="ca.dal.cs.csci4126.quizboard.SubQuestionTypes">
            <intent-filter>
                <action android:name="ca.dal.cs.csci4126.quizboard.SUBQUEST"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>

    <!-- Allow to connect with internet -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

</manifest>
